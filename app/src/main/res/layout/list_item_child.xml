<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:drawable/dialog_holo_light_frame"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgChildGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvListChildName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgChildGender"
        android:layout_toEndOf="@+id/imgChildGender"
        android:paddingLeft="16dp"
        android:text="Child Name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvListChildAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvListChildName"
        android:layout_toEndOf="@+id/imgChildGender"
        android:paddingLeft="16dp"
        android:text="x years old" />

    <ImageButton
        android:id="@+id/imgBtnRemove"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvListChildName"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/imgBtnEdit"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/imgBtnRemove"
        android:layout_toStartOf="@+id/imgBtnRemove"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageButton
        android:id="@+id/imgGoToMap"
        android:layout_width="36dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/imgBtnEdit"
        android:layout_toStartOf="@+id/imgBtnEdit"
        app:srcCompat="@android:drawable/ic_dialog_map" />
</RelativeLayout>